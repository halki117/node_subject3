<html>
  <head>
    <meta charset='utf-8' />
    <title>App</title>
  </head>
  <body>
    <h1>ようこそ</h1>
    <hr>
    <p>以下のボタンをクリック</p>
    <p class="question"></p>
    <hr>
    <button id="execute-btn">開始</button>
    {{!-- {{message}} --}}
  </body>
</html>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  $(document).ready(() => {
    $('#execute-btn').click(() => {
      $.ajax({
        url: '/trivia',
        type: 'GET',
        success: (response) => {
          response.forEach((value,index,array) => {
            console.log(value.question);
            $('.question').text(value.question)
          });
        },
        error: (xhr, status, error) => {
          console.error(error);
        }
      });
    });
  });
</script>